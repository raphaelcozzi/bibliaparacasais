RewriteEngine On
RewriteRule ^sitemap\.xml$ /index.php?module=sitemap&method=dynSitemap [L]
#aqui criamos uma condicao para que os arquivos sejam ignorados nas regras abaixo
    RewriteCond %{REQUEST_FILENAME} !-f
  #aqui criamos uma condicao para que diretorios sejam ignorados nas regras abaixo
    RewriteCond %{REQUEST_FILENAME} !-d


RewriteRule ^acf\/([0-9-a-z]+)$ index.php?module=acf&method=livro&id=$1 [NC,L]
RewriteRule ^acf\/([0-9-a-z]+)\/([0-9-a-z]+)$ acf/livro/$1/$2 [NC,L]

RewriteRule ^aa\/([0-9-a-z]+)$ index.php?module=aa&method=livro&id=$1 [NC,L]
RewriteRule ^aa\/([0-9-a-z]+)\/([0-9-a-z]+)$ aa/livro/$1/$2 [NC,L]

